@model IEnumerable<evidencia1.Models.compra>

@{
    ViewBag.Title = "Compras";
}

<h2>Compras</h2>

<p>
    @Html.ActionLink("Crear nueva compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Total
        </th>
        <th>
            Usuario
        </th>
        <th>
            Cliente
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @evidencia1.Controllers.CompraController.NombreUsuario(item.id_usuario)
            </td>
            <td>
                @evidencia1.Controllers.CompraController.NombreCliente(item.id_cliente)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
section scripts{
<script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })
</script>
}