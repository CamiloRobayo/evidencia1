<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Inventarios ADSI </title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/edicion.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("INVENTARIOS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <li> @Html.ActionLink("inicar sesion", "Login", "Usuarios") </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    { 
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Inventario <span class="glyphicon glyphicon-fire" aria-hidden="true"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Producto", "Index", "Producto")</li>
                            <li>@Html.ActionLink("Proveedores", "Index", "Proveedores")</li>
                            <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                            <li>@Html.ActionLink("roles", "Index", "roles")</li>
                            <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                            <li>@Html.ActionLink("Compras", "Index", "Compra")</li>
                            <li>@Html.ActionLink("UsuariosRoles", "Index", "Usuariorol")</li>
                            <li>@Html.ActionLink("Producto_Compras", "Index", "Producto_Compra")</li>
                            <li>@Html.ActionLink("Producto_imagen", "Index", "Producto_imagen")</li>

                        </ul>
                    </li>
                    
                        <li>@Html.ActionLink("Cerrar Sesion", "CloseSession", "Usuarios")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Inventarios ADSI</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
