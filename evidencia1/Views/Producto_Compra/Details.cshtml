@model evidencia1.Models.producto_compra

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>producto_compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Compra:
        </dt>

        <dd>
            @evidencia1.Controllers.Producto_CompraController.TotalCompra(Model.id_compra)
        </dd>

        <dt>
            Producto:
        </dt>

        <dd>
            @evidencia1.Controllers.Producto_CompraController.NombreProducto(Model.id_producto)
        </dd>

        <dt>
            Cantidad:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar", "Index")
</p>
