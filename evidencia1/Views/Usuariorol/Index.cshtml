@model IEnumerable<evidencia1.Models.usuariorol>

@{
    ViewBag.Title = "Index";
}

<h2>Usuarios y roles</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @evidencia1.Controllers.UsuariorolController.NombreUsuario(item.idUsuario)
            </td>
            <td>
                @evidencia1.Controllers.UsuariorolController.DescripcionRol(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new {@class = "linkDelete" })
            </td>
        </tr>
    }

</table>
@section scripts{
<script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })
</script>
}